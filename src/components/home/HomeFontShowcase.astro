---
import FontShowcase from "../font_showcase/FontShowcase";
---

<hr class="h-px w-full bg-transparent text-zinc-200" />
<!-- full width -->
<FontShowcase
  defaultEditableText="3 hours till midnight"
  defaultFontWeight="200"
  client:idle
/>
<FontShowcase
  defaultEditableText="United Martians"
  defaultFontFeatures={["ss01"]}
  defaultFontWeight="800"
  enableCustomKerning={true}
  client:idle
/>
<!-- paragraph -->
<FontShowcase
  defaultEditableText="Probability is best understood as the\nplausibility of a statement given some\nassumed information, not just the\nfrequency of occurrence of events"
  defaultFontWeight="300"
  defaultFontFeatures={["ss02"]}
  defaultTextContainerSize={[0.8, 0.8]}
  className="leading-[1.1]"
  client:idle
/>
<FontShowcase
  defaultEditableText="Hijau Betawi / Jingga Bis Kota\nKuning Gigi Balang / Biru Abang\nPink None & City Collaboration"
  defaultFontWeight="500"
  defaultFontFeatures={["ss03"]}
  defaultTextContainerSize={[0.8, 0.8]}
  className="leading-[1.1]"
  client:idle
/>
<FontShowcase
  defaultEditableText="The Sicilian Defense is a chess\nopening that begins with 1.e4 c5"
  defaultFontWeight="700"
  defaultTextContainerSize={[0.8, 0.8]}
  className="leading-[1.1]"
  client:idle
/>
